extends ../layout/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/add.css")

block content
    form(action="/admin/categories" method="POST")

        input(type="hidden" name="id" value=`${category._id}`)

        .form-group.row
            label(for="name").col-sm-2 Category Name
            .col-sm-10
                input(type="text" name="name" value=`${category.name}`).form-control#name

        .form-group.row
            label(for="description").col-sm-2 Description
            .col-sm-10
                textarea(name="description" cols="30" rows="10").form-control  #{category.description}

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit"  value="save Product").btn.btn-primary


