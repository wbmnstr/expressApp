extends ../layout/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/add.css")

block content
    form(action="/admin/add-category" method="POST")
        .form-group.row
            label(for="name").col-sm-2 Category Name
            .col-sm-10
                input(type="text" name="name").form-control#name


        .form-group.row
            label(for="description").col-sm-2 Description
            .col-sm-10
                textarea(name="description" cols="30" rows="10").form-control

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit"  value="save Category").btn.btn-primary


