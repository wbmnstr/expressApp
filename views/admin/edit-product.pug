extends ../layout/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/add.css")

block content
    form(action="/admin/edit-product" method="POST")
        .form-group.row
            label(for="name").col-sm-2 Name
            .col-sm-10
                input(type="text" name="name").form-control#name

        .form-group.row
            label(for="price").col-sm-2 Price
            .col-sm-10
                input(type="text" name="price").form-control#price

        .form-group.row
            label(for="image").col-sm-2 Image
            .col-sm-10
                input(type="text" name="imageUrl").form-control#image

        .form-group.row
            label(for="description").col-sm-2 Description
            .col-sm-10
                input(type="text" name="description").form-control#description

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit"  value="save Product").btn.btn-primary

