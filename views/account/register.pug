extends ../layout/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/add.css")

block content
    form(action="/register" method="POST")
        .form-group.row
            label(for="name").col-sm-2 Name
            .col-sm-5
                input(type="text" name="name").form-control#name


        .form-group.row
            label(for="email").col-sm-2 Email
            .col-sm-5
                input(name="email").form-control


        .form-group.row
            label(for="password").col-sm-2 Password
            .col-sm-5
                input(name="password" type="password").form-control

        .form-group.row
            .col-sm-5.offset-sm-2
                input(type="submit"  value="Submit").btn.btn-primary


