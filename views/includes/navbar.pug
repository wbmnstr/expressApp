nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
    .container
        a(href="/").navbar-brand Shopping

        ul.navbar-nav.mr-auto
            li.nav-item
                a(href="/", class=(path==='/'?'active':'')).nav-link Home

            li.nav-item
                a(href="/products", class=(path==='/products'?'active':'')).nav-link Products

            if isAuthenticated
                li.nav-item
                    a(href="/cart", class=(path==='/cart'?'active':'')).nav-link Cart

                li.nav-item
                    a(href="/orders", class=(path==='/orders'?'active':'')).nav-link Orders

                li.nav-item
                    a(href="/admin/add-product", class=(path==='/admin/add-product'?'active':'')).nav-link Add Products

                li.nav-item
                    a(href="/admin/products", class=(path==='/admin/products'?'active':'')).nav-link Admin Products
                
                li.nav-item
                    a(href="/admin/add-category", class=(path==='/admin/add-category'?'active':'')).nav-link Add Category
                li.nav-item
                    a(href="/admin/categories", class=(path==='/admin/categories'?'active':'')).nav-link Categories


        ul.navbar-nav.ml-auto
            if isAuthenticated
                li.nav-item
                    a(href="/logout").nav-link Logout
            else 
                li.nav-item
                    a(href="/login").nav-link Login
                li.nav-item
                    a(href="/register").nav-link Register
