extends ../layout/main-layout.pug

block content
    .row
        .col-md-4
            img(src=`/img/${product.imageUrl}` width="250" alt=`${product.description}`)
            .img-fluid
        .col-md-8
            h1 #{product.name}
            hr
            p #{product.description}
            br
            p price: #{product.price}
            button(type="submit").btn.btn-primary.btn-lg Add to Cart